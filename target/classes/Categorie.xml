<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="https://jakarta.ee/xml/ns/persistence/orm"
                 version="3.0">

    <entity class="com.ecommerce.metier.Categorie">
        <table name="categorie" schema="commerce" catalog=""/>
        <attributes>
            <id name="idcat">
